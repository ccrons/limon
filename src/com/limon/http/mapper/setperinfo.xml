<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.limon.http.dao.SetPerInfoDao">
	<update id="setPerInfo" parameterType="java.util.Map">
		update app_user set nickname=#{nickname},realname=#{name},sex=#{sex},age=#{age},marriage=#{marriage},hidename=#{hidename} where id=#{uid}
    </update>
</mapper>
